<div class="new-transaction">
  <div class="well">
    <div class="well white">
      <%= simple_form_for(@transaction, html: { class: 'form-horizontal' }) do |f| %>
        <%= f.association :user %>
        <%= f.input :kind, collection: %w(Expense Income) %>
        <%= f.input :name %>
        <%= f.input :amount %>
        <%= f.input :category, collection: %w(Food Gas Travel Pleasure Rent) %>
        <%= f.input :date, as: :date_picker %>
        <%= f.input :recurring %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>